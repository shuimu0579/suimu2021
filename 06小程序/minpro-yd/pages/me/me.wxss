/* pages/me/me.wxss */
.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 40rpx 26rpx 40rpx 0;
}
.userinfo-avatar image {
  width: 100%;
  height: 100%;
}
.userinfo-nickname {
  height: 80rpx;
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: left;
  color: #000000;
  display: grid;
}
.entName {
  font-size: 24rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
}

.page-container {
  width: 100%;
  height: 100vh;
  background: #eeeeee;
}
.user-info-container {
  height: 160rpx;
  display: flex;
  padding: 0 40rpx;
  background: #ffffff;
  align-items: center;
  margin: 24rpx 0;
}
.user-info-container .left-container {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  background: #d8d8d8;
  border: 0px solid;
  text-align: center;
  line-height: 120rpx;
  overflow: hidden;
}
.left-container image {
  height: 140rpx;
  width: 140rpx;
  vertical-align: middle;
}
.user-info-container .right-container {
  margin-left: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.login-out {
  margin-top: 60rpx;
  width: 90%;
  background: #507fff;
  margin-left: 5%;
  text-align: center;
  height: 40px;
  line-height: 40px;
  border-radius: 6rpx;
  color: #ffffff;
}
.main {
  padding: 0 40rpx;
  background: #ffffff;
  margin-bottom: 50rpx;
}
.main2 {
  width: 80%;
  height: 45px;
  border: 2rpx solid #5582f3;
  border-radius: 8rpx;
  position:fixed;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  margin: 0 auto ;
}
.loginout {
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #507fff;
  line-height: 2.5;
}
.mainItem {
  height: 88rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  padding: 24rpx 0;
}
.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.scroll-view {
  width: 80%;
  position: absolute;
  top: 190rpx;
  background-color: white;
  -moz-box-shadow: 0px 0px 2px #e2e2e2;
  -webkit-box-shadow: 0px 0px 2px #e2e2e2;
  box-shadow: 0px 0px 2px #e2e2e2;
}
.msg-item {
  width: 100%;
}
.user-name {
  width: 100%;
  padding: 20rpx;
  font-size: 33rpx;
  border-bottom: 1px solid #e2e2e2;
}
/* 搜索框 */
.weui-search-bar__form {
  position: relative;
}
.weui-search-bar__input {
  height: 72rpx;
}
.weui-icon-search_in-box {
  top: 22rpx;
}
.weui-search-bar__cancel-btn {
  line-height: 70rpx;
}

.weui-icon-clear {
  top: 4rpx;
}

/* pages/wxmininative/native.wxss */
page {
  background-color: #fff;
}
.container {
  padding: 0;
  background-color: #fff;
  height: 100%;
}

.header {
  width: 700rpx;
  height: 240rpx;
  margin: 24rpx;
}

.headerImg {
  width: 100%;
  height: 100%;
}

.headerIcon {
  width: 38rpx;
  height: 48rpx;
  display: inline-block;
  vertical-align: middle;
}

.headerRow {
  display: flex;
  padding: 60rpx;
  justify-content: space-between;
}

.headerText {
  font-size: 44rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 600;
  text-align: left;
  color: #fff;
}
.navTitle {
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 600;
  text-align: left;
  color: #333333;
  padding: 0 32rpx;
}
.nav {
  padding: 50rpx 25rpx;
  width: 100%;
  box-sizing: border-box;
  /* min-height: 600rpx; */
  background: #fff;
  display: flex;
  justify-content: left;
  flex-wrap: wrap;
  align-content: space-between;
}
.navText {
  font-size: 26rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 300;
  margin: 0 auto;
  color: #333333;
  overflow: hidden;
  width: 150rpx;
  text-align: center;
}
.menuBox {
  width: 25%;
  height: 150rpx;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
  flex: 0 0 25%;
}

.title {
  width: 750rpx;
  height: 80rpx;
  background: #f8f8f8;
  text-align: center;
}

.title text {
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  color: #333;
  display: inline-block;
  font-size: 28rpx;
  vertical-align: -16rpx;
  padding: 0 40rpx;
}

.navImg {
  width: 80rpx;
  height: 80rpx;
}

.navIcon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin: 0 auto;
  background-size: cover;
}

.list {
  display: flex;
  width: 686rpx;
  justify-content: space-between;
  min-height: 90rpx;
  border-top: 2rpx solid #eee;
  box-sizing: border-box;
  padding: 24rpx 0;
  margin: auto;
}

.list:nth-child(2) {
  border-top: none;
}


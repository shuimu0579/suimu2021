.footer {
  position: relative;
  margin: 10rpx 0rpx 20rpx 0rpx;
  width: 750rpx;
  height: 70rpx;
  background: #fff;
  padding: 0 32rpx;
  box-sizing: border-box;
  align-items: center;
  display: flex;
}

.footer .footerText {
  display: inline-block;
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: left;
  color: #333;
}

.footer .rightIcon {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.itemImg {
  width: 200rpx;
  height: 160rpx;
  position: relative;
}

.itemImg view {
  width: 40rpx;
  height: 40rpx;
  background: #295ffe;
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.itemImg text {
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  color: #fff;
}

/* tab样式 */

.tab {
  display: flex;
  flex-direction: column;
}

.tab-nav {
  height: 80rpx;
  background: #fff;
  border-bottom: 0.5rpx dotted #ddd;
  display: flex;
  line-height: 79rpx;
  position: relative;
}

.tab-line {
  position: absolute;
  left: 0;
  bottom: -1rpx;
  height: 4rpx;
  background: #295ffe;
  transition: all 0.3s;
}

.tab-content {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
}

.scroll {
  white-space: nowrap;
  position: fixed;
  z-index: 999;
}

.hashinfo {
  color: #295ffe;
  display: inline-block;
  width: 55%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
